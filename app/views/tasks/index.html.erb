<div>
  <h1>My Tasks</h1>
</div>

<div>
  <ul style = 'list-style-type: none;'>
    <% @tasks.each do |task| %>
        <li >
          <% if task.completed %>
          <i class="fas fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>
          <%= link_to task.title, task_path(task) %> |
          <%= link_to "ðŸ—‘",
              task_path(task),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
        </li>
    <% end %>
  </ul>
</div>

