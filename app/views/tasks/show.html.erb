<h1><%= @task.title %></h1>
<p><%= @task.details %></p>

<div>
  <% if @task.completed %>
    <i class="fas fa-check-square"></i>
    <%= "This task is completed" %>
    <% else %>
    <i class="far fa-square"></i>
    <%= "This task is not completed yet" %>
  <% end %>
</div>

<%= link_to "List all my tasks", tasks_path %>
